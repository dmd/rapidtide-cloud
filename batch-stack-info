#!/bin/bash

TMP=$(mktemp)
aws cloudformation list-stack-resources --stack-name $1 > $TMP


echo --job-queue $(<$TMP jq -r '.StackResourceSummaries | map (select(.LogicalResourceId == "JobQueue" ))[0].PhysicalResourceId ') \
     --job-definition $(<$TMP jq -r '.StackResourceSummaries | map (select(.LogicalResourceId == "JobDefinition" ))[0].PhysicalResourceId ')

\rm $TMP

